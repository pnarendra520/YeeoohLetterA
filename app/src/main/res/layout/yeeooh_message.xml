<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:text="last month"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/app_bottom_color_gray"


            />


        <yeeooh.android.app.com.yeeoohnewapp.views.CircleImageView
            android:id="@+id/message_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/sunflower" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/message_profile"
            android:orientation="vertical"
            android:paddingBottom="2dp">


            <TextView
                android:id="@+id/inbox_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Narendra"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/app_bottom_color_gray" />

            <ImageView
                android:id="@+id/inbox_letter"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:paddingBottom="3dp"
                android:paddingRight="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/sunflower" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="last month"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/app_bottom_color_gray"
                android:visibility="gone"


                />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>