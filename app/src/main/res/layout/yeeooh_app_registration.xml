<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/white"
    android:scrollbars="none"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/back"
        android:clickable="true"
        android:id="@+id/back1"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_above="@+id/profile_layout"
        android:text="Sign in"
        android:src="@drawable/logo"
        android:textColor="@color/app_top_color"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regisier"
        android:textColor="@color/app_main_colour"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/layout"
        android:paddingRight="8dp"
        android:layout_marginLeft="@dimen/activity_padding"
        android:layout_marginRight="@dimen/activity_padding"
       android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit"
        android:layout_height="wrap_content">

  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
     android:layout_margin="8dp"
      android:background="@color/white"
      android:layout_height="wrap_content">

      <EditText
          android:id="@+id/editText_name"
          android:layout_width="match_parent"
          android:inputType="textAutoComplete"
          android:singleLine="true"
          android:textColor="@color/app_bottom_color_gray"
          android:layout_marginLeft="14dp"
          android:layout_marginRight="10dp"
          android:layout_height="wrap_content"
          android:drawableLeft="@drawable/user_big"
          android:hint="Name"
          android:textSize="12sp"
        android:drawablePadding="5dp"
          android:textAppearance="?android:attr/textAppearanceSmall" />

      <EditText
          android:layout_width="match_parent"
          android:hint="Email"
          android:layout_marginLeft="14dp"
          android:singleLine="true"
          android:textSize="12sp"
          android:layout_marginRight="10dp"
          android:textColor="@color/app_bottom_color_gray"
          android:id="@+id/editText_email"
          android:inputType="textEmailAddress"
          android:drawablePadding="5dp"
          android:drawableLeft="@drawable/mail"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:layout_height="wrap_content" />
      <EditText
          android:layout_width="match_parent"
          android:hint="Phone"
          android:inputType="phone"
          android:layout_marginLeft="14dp"
          android:maxLength="10"
          android:layout_marginRight="10dp"
          android:textSize="12sp"
          android:singleLine="true"
          android:id="@+id/editText_phone"
          android:drawablePadding="5dp"
          android:drawableLeft="@drawable/mobile"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:layout_height="wrap_content" />
      <EditText
          android:layout_width="match_parent"
          android:hint="Password"
          android:layout_marginRight="10dp"
          android:layout_marginLeft="14dp"
          android:singleLine="true"
          android:textSize="12sp"
          android:textColor="@color/app_bottom_color_gray"
          android:inputType="textPassword"
          android:drawablePadding="5dp"
          android:id="@+id/editText_password"
          android:drawableLeft="@drawable/password"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:layout_height="wrap_content" />
      <EditText
          android:layout_width="match_parent"
          android:hint="Con-password"
          android:textSize="12sp"
          android:layout_marginRight="10dp"
          android:singleLine="true"
          android:drawablePadding="5dp"
          android:textColor="@color/app_bottom_color_gray"
          android:layout_marginLeft="14dp"
          android:inputType="textPassword"
          android:id="@+id/editText_con_password"
          android:drawableLeft="@drawable/password"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:layout_height="wrap_content" />
      <EditText
          android:layout_width="match_parent"
          android:hint="2017/03/15"
          android:layout_marginRight="10dp"
          android:layout_marginLeft="14dp"
          android:singleLine="true"
          android:textSize="12sp"
          android:textColor="@color/app_bottom_color_gray"
          android:id="@+id/editText_date"
          android:drawablePadding="5dp"
          android:focusable="false"
          android:drawableLeft="@drawable/calendar"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:layout_height="wrap_content" />
      <EditText
          android:layout_width="match_parent"
          android:hint="Gender"
          android:layout_marginLeft="14dp"
          android:singleLine="true"
          android:textSize="12sp"
          android:focusable="false"
          android:visibility="gone"
          android:textColor="@color/app_bottom_color_gray"
          android:id="@+id/editText_gender"
          android:drawablePadding="5dp"
          android:drawableLeft="@drawable/calendar"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:layout_height="wrap_content" />

      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_gravity="center"
          android:gravity="center_vertical"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="5dp"
          android:layout_height="wrap_content">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="2dp"
              android:background="@drawable/gender"
              />
          <RadioGroup
              android:layout_weight="1"
              android:layout_width="wrap_content"
              android:orientation="horizontal"
              android:id="@+id/gender"
              android:gravity="center_horizontal"

              android:layout_height="wrap_content">
              <RadioButton
                  android:layout_width="wrap_content"
                  android:text="Male"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:textSize="10sp"
                  android:textColor="@color/app_bottom_color_gray"
                  android:buttonTint="@color/app_bottom_color_gray"
                  android:layout_height="wrap_content" />
              <RadioButton
                  android:layout_width="wrap_content"
                  android:text="Female"
                  android:textColor="@color/app_bottom_color_gray"
                  android:textSize="10sp"
                  android:layout_marginLeft="3dp"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:buttonTint="@color/app_bottom_color_gray"
                  android:layout_height="wrap_content" />
              <RadioButton
                  android:layout_width="wrap_content"
                  android:text="C"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:textColor="@color/app_bottom_color_gray"
                  android:buttonTint="@color/app_bottom_color_gray"
                  android:textSize="10sp"
                  android:layout_marginLeft="2dp"

                  android:layout_height="wrap_content" />

          </RadioGroup>
      </LinearLayout>
  </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:ems="5"
        android:layout_centerHorizontal="true"
        android:id="@+id/editText_submit"
        android:layout_marginTop="12dp"
        android:padding="6dp"
        android:gravity="center"
        android:background="@drawable/buttoun_custoum"
        android:text="Submit"/>

    </LinearLayout>

</RelativeLayout>




</ScrollView>