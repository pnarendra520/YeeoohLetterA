<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include
        layout="@layout/yeeoohletter"
        android:id="@+id/toolbar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:id="@+id/save_address"
        android:text="Address"
        android:textColor="@color/app_bottom_color_gray"
        android:layout_marginLeft="5dp"
        android:drawablePadding="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:gravity="center"
      android:layout_margin="5dp"
        android:drawableLeft="@drawable/navi"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_address"
        android:layout_marginRight="6dp"
        android:layout_margin="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Add address"
        android:gravity="center"
        android:textColor="@color/app_bottom_color_gray"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_below="@+id/save_address"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:scrollbars="none"
        android:divider="@color/app_bottom_color_gray"
        android:layout_marginTop="8dp"
        android:padding="10dp" >
    </ListView>
<TextView
android:id="@+id/empty"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
    android:textSize="25sp"
    android:textColor="@color/app_top_color"
android:layout_centerInParent="true"
android:text="Add your Address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:ems="10"
        android:id="@+id/address_continue"
        android:textColor="@color/white"
        android:background="@color/app_main_colour"
        android:drawableLeft="@drawable/proceed_cart"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Continue" />
</RelativeLayout>