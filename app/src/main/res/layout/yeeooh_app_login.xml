<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#FFFFFFFF"
    android:scrollbars="none"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_layout"
        android:text="Sign in"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:layout_marginBottom="50dp"
        android:textColor="@color/app_top_color"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="4dp"
        android:text="Sign in"
        android:textColor="@color/app_main_colour"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_above="@+id/profile_layout"
        android:layout_centerHorizontal="true" />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
  android:padding="@dimen/activity_padding1"
    android:layout_centerInParent="true"
    android:id="@+id/profile_layout"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="@drawable/edit"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:background="@drawable/mail"
            />
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/login_email"
            android:hint="Email"
            android:singleLine="true"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="@drawable/edittext"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/edit"
        android:layout_marginTop="15dp"
        android:padding="4dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="3dp"
            android:background="@drawable/password"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:hint="Password"
            android:gravity="center"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/login_password"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="@drawable/edittext"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/forgot_password"
        android:textStyle="italic"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/app_bottom_color_gray"
        android:text="Forgot Password"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/profile_layout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/buttoun_custoum"
        android:text="Login"
        android:clickable="true"
        android:id="@+id/login_signin"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        android:ems="6"
        android:layout_height="wrap_content" />

</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/edit"
        android:id="@+id/layout"
        android:layout_margin="@dimen/activity_textsize"
        android:layout_below="@+id/profile_layout"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textColor="#000"
            android:id="@+id/facebook"
            android:clickable="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:textColor="#000"
            android:gravity="center"
            android:background="@drawable/circle"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google"
            android:textColor="#000"
            android:clickable="true"
            android:id="@+id/google"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
    </RelativeLayout>

<TextView
    android:layout_width="match_parent"
    android:text="Register"
    android:gravity="center"
    android:textStyle="bold"
    android:id="@+id/register"
    android:layout_marginTop="10dp"
    android:textColor="#1171a9"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layout"
    android:layout_alignParentStart="true" />

</RelativeLayout>
</ScrollView>