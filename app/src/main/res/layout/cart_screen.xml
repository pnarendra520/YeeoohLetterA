<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/yeeoohletter"
        android:id="@+id/heder"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_below="@+id/heder"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/cart_image"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/green"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/cart_image"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frame"
                    android:id="@+id/holder_name"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textSize="8sp"
                    android:textColor="@color/app_bottom_color_gray"
                    android:text="Yeeooh App"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textColor="@color/app_bottom_color_gray"
                    android:text="Floweers"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textSize="8sp"
                    android:textColor="@color/app_bottom_color_gray"
                    android:text="Yeeooh App"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40000"
                android:textStyle="bold"
                android:id="@+id/cart_amount"
                android:textColor="@color/app_bottom_color_gray"
                android:textSize="18sp"
                android:layout_marginTop="15dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="YeeoohApp"
                android:textColor="@color/app_bottom_color_gray"
                android:textSize="8sp"
                android:layout_gravity="start"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:spinnerMode="dropdown"

                    android:id="@+id/select_paper"
                    />
                <Spinner
                    android:layout_width="120dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="30dp"
                    android:spinnerMode="dropdown"
                    android:id="@+id/select_address"
                    />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_margin="2dp"
            android:paddingRight="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/circle"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/app_bottom_color"
                android:id="@+id/cart_increment"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:textColor="@color/app_bottom_color_gray"
                android:id="@+id/cart_count"
                android:layout_height="wrap_content"
                android:text="Count"
                />
            <TextView
                android:layout_width="wrap_content"
                android:background="@drawable/circle"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/cart_decrement"
                android:textColor="@color/app_top_color"
                android:gravity="center"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
               android:background="@drawable/delete"
                />

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/amount"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="1dp"
        android:text="Amount"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/amount"
      android:layout_centerVertical="true"
        android:text="Amount :-"
        />

</RelativeLayout>