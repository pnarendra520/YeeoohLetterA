<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/app_bottom_color_gray"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_margin="2dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content">

            <yeeooh.android.app.com.yeeoohnewapp.views.CircleImageView
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/dock"
                android:layout_height="50dp" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:text="Sample Name"
                android:padding="2dp"
                android:id="@+id/hubname"
               android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_height="wrap_content" />
<ImageView
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Hubs"
                    android:padding="5dp"
                    android:paddingStart="18dp"
                    android:gravity="center"
                    android:id="@+id/one"
                    android:drawablePadding="5dp"
                    android:background="@color/app_bottom_color"
                    android:drawableRight="@drawable/hubs"
                    android:layout_height="wrap_content"
                    />

               <TextView
                   android:layout_width="wrap_content"
                   android:text="nare"
                   android:padding="5dp"
                   android:gravity="center"
                   android:paddingEnd="18dp"
                   android:drawablePadding="5dp"
                   android:background="@color/app_bottom_color"
                   android:drawableLeft="@drawable/hubs"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/white"


                />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:text="Add to network"
    />
        </LinearLayout>



    </android.support.v7.widget.CardView>


</RelativeLayout>